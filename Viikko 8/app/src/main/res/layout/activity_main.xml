<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC0000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/LogoText"
        android:layout_width="270dp"
        android:layout_height="128dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="top|center_vertical"
        android:paddingLeft="10dp"
        android:text="Mocka\nCola\nMachine"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/infoBox"
        android:layout_width="379dp"
        android:layout_height="88dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/press_start_2p"
        android:gravity="left"
        android:maxLines="4"
        android:padding="5dp"
        android:singleLine="false"
        android:textAllCaps="true"
        android:textColor="#00DC0B"
        android:textSize="10sp"
        android:type="linear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogoText"
        app:layout_constraintVertical_bias="0.0"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b1Price"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/press_start_2p"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="#00DC0B"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/b2Price"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/b1Button"
        app:layout_constraintStart_toStartOf="@+id/b2Price"
        app:layout_constraintTop_toBottomOf="@+id/infoBox"
        app:layout_constraintVertical_bias="0.32999998"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/curMoney"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/press_start_2p"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="#00DC0B"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/b2Price"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/b1Button"
        app:layout_constraintStart_toStartOf="@+id/b2Price"
        app:layout_constraintTop_toBottomOf="@+id/infoBox"
        app:layout_constraintVertical_bias="0.19"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b6Price"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/press_start_2p"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="#00DC0B"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toEndOf="@+id/b6Button"
        app:layout_constraintTop_toBottomOf="@+id/b5Price"
        app:layout_constraintVertical_bias="0.172"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b4Price"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/press_start_2p"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="#00DC0B"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/b5Price"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/b4Button"
        app:layout_constraintStart_toStartOf="@+id/b5Price"
        app:layout_constraintTop_toBottomOf="@+id/b3Price"
        app:layout_constraintVertical_bias="0.092"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b3Price"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/press_start_2p"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="#00DC0B"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/b4Price"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/b3Button"
        app:layout_constraintStart_toStartOf="@+id/b4Price"
        app:layout_constraintTop_toBottomOf="@+id/b2Price"
        app:layout_constraintVertical_bias="0.007"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b2Price"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/press_start_2p"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="#00DC0B"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/b3Price"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/b2Button"
        app:layout_constraintStart_toStartOf="@+id/b3Price"
        app:layout_constraintTop_toBottomOf="@+id/b1Price"
        app:layout_constraintVertical_bias="0.057"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b5Price"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/press_start_2p"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="#00DC0B"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/b6Price"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/b5Button"
        app:layout_constraintStart_toStartOf="@+id/b6Price"
        app:layout_constraintTop_toBottomOf="@+id/b4Price"
        app:layout_constraintVertical_bias="0.117"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b4Button"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:background="@drawable/gradwh"
        android:clickable="true"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center|left"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="MockaZero (0.5)"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="normal"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b3Button"
        app:layout_constraintVertical_bias="0.092"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b1Button"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:background="@drawable/gradwh"
        android:clickable="true"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center|left"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="MockaCola (0.33)"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="normal"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoBox"
        app:layout_constraintVertical_bias="0.32999998"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b2Button"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:background="@drawable/gradwh"
        android:clickable="true"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center|left"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="MockaCola (0.5)"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="normal"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1Button"
        app:layout_constraintVertical_bias="0.057"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b5Button"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:background="@drawable/gradwh"
        android:clickable="true"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center|left"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="Phantasy (0.33)"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="normal"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b4Button"
        app:layout_constraintVertical_bias="0.117"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b6Button"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:background="@drawable/gradwh"
        android:clickable="true"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center|left"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="Phantasy (0.5)"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b5Button"
        app:layout_constraintVertical_bias="0.172"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/b3Button"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:background="@drawable/gradwh"
        android:clickable="true"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center|left"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="MockaZero (0.33)"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="normal"
        android:type="radial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b2Button"
        app:layout_constraintVertical_bias="0.058"
        app:lineHeight="0dp" />

    <TextView
        android:id="@+id/retMoney"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:background="@drawable/gradwh"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:padding="5dp"
        android:text="Return Money"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="normal"
        android:type="radial"
        android:onClick="onClick"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toEndOf="@+id/addMoney"
        app:layout_constraintTop_toTopOf="@+id/addMoney"
        app:lineHeight="0dp" />

    <SeekBar
        android:id="@+id/moneySlider"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:max="10"
        android:min="1"
        android:progress="1"
        app:layout_constraintBottom_toTopOf="@+id/b1Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoBox"
        app:layout_constraintVertical_bias="0.752" />

    <TextView
        android:id="@+id/addMoney"
        android:layout_width="168dp"
        android:layout_height="36dp"
        android:background="@drawable/gradwh"
        android:clickable="true"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="Add Money"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/moneySlider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoBox"
        app:layout_constraintVertical_bias="0.578" />


</androidx.constraintlayout.widget.ConstraintLayout>